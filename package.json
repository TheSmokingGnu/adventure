    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.1",
    "jasmine-ts": "^0.1.0",
    "jsdoc": "^3.4.3",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^2.0.3",
    "phantomjs-prebuilt": "^2.1.14",
    "snyk": "^1.29.0",
    "ts-loader": "^1.3.3",
